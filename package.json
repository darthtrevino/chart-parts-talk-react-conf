		"react-pose": "^3.3.6",
		"spectacle": "^5.2.0",
		"spectacle-code-slide": "^0.5.2",
		"spectacle-renderer": "^0.0.3",
		"styled-components": "^3.4.9",
		"vega-datasets": "^1.19.0"
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "all",
		"semi": false,
		"useTabs": true
	},
	"lint-staged": {
		"**/*.{ts,tsx}": [
			"prettier --write",
			"git add"
		]
	},
