{
	"name": "spectacle-boilerplate",
	"version": "1.0.1",
	"description": "ReactJS Powered Presentation Framework",
	"main": "lib/index.js",
	"scripts": {
		"clean": "rimraf dist site",
		"bundle": "cross-env NODE_ENV=production webpack --config webpack.config.production.js",
		"build": "run-s bundle nojekyll copyindex",
		"deploy": "run-s clean build nojekyll publish_gh_pages",
		"export": "spectacle-renderer --delay 3000",
		"start": "cross-env NODE_ENV=development node server.js",
		"nojekyll": "touch site/.nojekyll",
		"copyindex": "cp -f index.html site",
		"publish_gh_pages": "NODE_DEBUG=gh-pages gh-pages -d site -t"
	},
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@babel/plugin-syntax-dynamic-import": "^7.0.0",
		"gh-pages": "^2.0.1",
		"husky": "^0.14.3",
		"lint-staged": "^7.3.0",
		"normalize.css": "7.0.0",
		"prettier": "^1.14.3",
		"react": "^16.6.0",
		"react-audio-player": "^0.10.0",
		"react-dom": "^16.5.2",
		"react-pose": "^3.3.6",
		"spectacle": "^5.2.0",
		"spectacle-code-slide": "^0.5.2",
		"spectacle-renderer": "^0.0.3",
		"styled-components": "^3.4.9",
		"vega-datasets": "^1.19.0"
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "all",
		"semi": false,
		"useTabs": true
	},
	"lint-staged": {
		"**/*.{ts,tsx}": [
			"prettier --write",
			"git add"
		]
	},
	"devDependencies": {
		"@babel/cli": "^7.1.2",
		"@babel/core": "^7.1.2",
		"@babel/plugin-proposal-class-properties": "^7.1.0",
		"@babel/polyfill": "^7.0.0",
		"@babel/preset-env": "^7.1.0",
		"@babel/preset-react": "^7.0.0",
		"@babel/runtime": "^7.1.2",
		"@chart-parts/orchestrator": "^0.0.16",
		"@chart-parts/react": "^0.0.16",
		"@chart-parts/react-svg-renderer": "^0.0.16",
		"@chart-parts/scales": "^0.0.16",
		"@chart-parts/transform": "^0.0.16",
		"babel-loader": "^8.0.4",
		"cross-env": "^5.2.0",
		"css-loader": "^1.0.0",
		"express": "^4.16.2",
		"file-loader": "^2.0.0",
		"html-loader": "^0.5.5",
		"is-buffer": "^1.1.5",
		"markdown-loader": "^4.0.0",
		"node-libs-browser": "^2.0.0",
		"npm-run-all": "^4.1.3",
		"raw-loader": "^0.5.1",
		"react-hot-loader": "^4.3.11",
		"react-transform-catch-errors": "^1.0.2",
		"redbox-react": "^1.5.0",
		"rimraf": "^2.6.2",
		"style-loader": "^0.23.1",
		"url-loader": "^1.1.2",
		"webpack": "^4.23.1",
		"webpack-cli": "^3.1.2",
		"webpack-dev-middleware": "^3.4.0",
		"webpack-dev-server": "^3.1.10",
		"webpack-hot-middleware": "^2.24.3"
	}
}
